{
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.0.11/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.13.0/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.12/jsx-runtime.ts"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --env-file -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "cms": "deno task lume cms",
    "format": "echo '=== Regular deno fmt... ===' && deno fmt --ignore=_dist && echo '=== Deno fmt for vento... ===' && deno fmt --unstable-component --ignore=_dist",
    "serve_ondemand": "deno run --env-file -A serve.ts"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "fmt": {
    "exclude": [
      "_site",
      "src/assets"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "exclude": [
      "_site/",
      "_cache/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars",
        "no-import-prefix"
      ]
    },
    "plugins": [
      "https://deno.land/x/lume@v3.0.11/lint.ts"
    ]
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ]
}
